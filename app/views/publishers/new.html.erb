<div class="container">
  <h1 class="center">Create Publisher</h1>
  <%= form_with(url: publishers_path, :html => {class: "form-horizontal", role: "form"}) do |f| %>
    <div class="form-group row">
      <div class="control-label col-sm-2">
        <%= f.label :name %><br/>
      </div>
      <div class="col-sm-8">
        <%= f.text_field :name , class: "form-control", placeholder:"Publisher Name", autofocus: true %>
      </div>
    </div>
    <div class="form-group row">
      <div class="control-label col-sm-2">
        <%= f.label :address %><br/>
      </div>
      <div class="col-sm-8">
        <%= f.text_field :address, rows:10, class: "form-control", placeholder:"Address"%>
      </div>
    </div>
    <div class="form-group row">
      <div class="control-label col-sm-2">
        <%= f.label :telephone %><br/>
      </div>
      <div class="col-sm-8">
        <%= f.text_field :telephone, rows:10, class: "form-control", placeholder:"Telephone"%>
      </div>
    </div>
    <div class="form-group">
      <div class="center">
        <%= f.submit class:"btn btn-dark",:value => "Add Publisher" %>
      </div>
    </div>
  <% end %>
</div>