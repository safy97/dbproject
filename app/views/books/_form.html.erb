<div class="row">
  <div class="col-xs-12">
    <%= form_with(url: books_path, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :Title %><br/>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :title , class: "form-control", placeholder:"Book Title", autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :ISBN %><br/>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :isbn, rows:10, class: "form-control", placeholder:"ISBN"%>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :PublisherID %><br/>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :PublisherId, rows:10, class: "form-control", placeholder:"Publisher Name"%>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit class:"btn btn-primary btn-lg" %>
        </div>
      </div>
    <% end %>
    <div class="col-xs-12 col-xs-offset-2">
      <%= link_to "Back To Articles", articles_path %>
    </div>
  </div>
</div>