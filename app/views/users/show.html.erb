<div class="card" style="margin: 10px;">
  <div class="card-body">
    <h5 class="card-title"><%= link_to @row["username"], user_path(@row["id"]),class: "badge badge-primary"%></h5>
    <%@row.each do |key,val| %>
      <div class="row">
        <div class="col-6">
          <label style="font-weight:bold;"><%= key %></label>
        </div>

        <div class="col-6">
          <%=val %>
        </div>
      </div>
    <%end %>
  </div>
</div>