<h1>Edit your account</h1>
<%= form_for(:session ,url: updatee_path ,method: :patch) do |f| %>
  <%= f.hidden_field :id, value: @row["id"] %>
  <div class="form-group row" style="margin-top:10px">
    <div class ="col-sm-2 col-form-label">
      <%= f.label :email %>
    </div>

    <div class="col-sm-10">
      <%= f.email_field :email,class: "form-control" ,value: @row["email"], autofocus: true   %>
    </div>

  </div>


  <div class="form-group row">
    <div class ="col-sm-2 col-form-label">
      <%= f.label :username %>
    </div>
    <div class="col-sm-10">
      <%= f.text_field :username,class: "form-control" ,value: @row["username"]  %>
    </div>
  </div>
  <div class="form-group row">
    <div class ="col-sm-2 col-form-label">
      <%= f.label :password %>
    </div>
    <div class="col-sm-10">
      <%= f.password_field :password,class: "form-control" ,autocomplete: "off"  %>
    </div>
  </div>

  <div class="form-group row">
    <div class ="col-sm-2 col-form-label">
      <%= f.label :address %>
    </div>
    <div class="col-sm-10">
      <%= f.text_field :address,class: "form-control" ,value: @row["address"]  %>
    </div>
  </div>


  <div class= "form-group row">
    <div class="offset-sm-2 col-sm-10">
      <%= f.submit "update account", class: 'btn btn-primary btn-lg' %>
    </div>
  </div>
<% end %>
