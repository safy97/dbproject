<div class="row">
  <div class="col-12">
    <%@authors.each do |row| %>
      <div class="card" style="margin: 10px;">
        <div class="card-body">
          <h5 class="card-title"><%= link_to row["author_name"], publisher_path(row["id"]),class: "badge badge-primary"%></h5>
          <%row.each do |key,val| %>
            <div class="row">
              <div class="col-6">
                <label style="font-weight:bold;"><%= key %></label>
              </div>

              <div class="col-6">
                <%=val %>
              </div>
            </div>
          <%end %>
          <%= link_to "Edit", edit_author_path(row["id"]), class: "btn btn-xs btn-primary" %>
          <%= link_to "Delete", author_path(row["id"]), method: :delete, data:{confirm: "Sure?"}, class:"btn btn-xs btn-danger" %>
        </div>
      </div>
    <% end %>
  </div>
</div>