<div class="container">
  <% flash.each do |name, msg| %>
    <div class="alert alert-<%= name %>">
      <%= msg %>
    </div>
  <% end %>
</div>
<div class="container">
  <h1 class="center">Edit Author</h1>
  <%= form_with  as: :post, url: author_path, method: :patch, html: { class: "horizontal-form" } do |f| %>
    <div class="form-group row">
      <div class="control-label col-sm-2">
        <%= f.label :name %><br/>
      </div>
      <div class="col-sm-8">
        <%= f.text_field :name , class: "form-control", placeholder:"Publisher Name", autofocus: true, value: @author["author_name"] %>
      </div>
    </div>
    <div class="form-group">
      <div class="center">
        <%= f.submit class:"btn btn-dark",:value => "Edit Author" %>
      </div>
    </div>
  <% end %>
</div>